---
name: KDL (Kestrel Development Kit)
file_extensions:
  - kdl
scope: source.kdl

contexts:
  prototype:
    - include: single-line-comment

  main:
    - include: configuration
    - include: directive
    - include: resource-declaration
    - include: component-declaration

# COMMENTS #####################################################################

  single-line-comment:
    - match: '`'
      scope: punctuation.definition.comment.begin.kdl
      push:
        - meta_scope: comment.line.kdl
        - match: $
          pop: true

# DIRECTIVES ###################################################################

  directive:
    - match: '((@)(out|import|project|author|version))'
      scope: meta.preprocessor.directive.kdl
      captures:
        1: keyword.kdl
      push:
        - include: string-literal
        - match: ';'
          pop: true
    - match: '((@)(require))'
      captures:
        1: keyword.kdl
      set:
        - match: '(extended|classic|rez)'
          captures:
            1: constant.language
        - match: ';'
          pop: true
    - match: '((@)(configuration))'
      captures:
        1: keyword.kdl
      set:
        - match: '\{'
          scope: punctuation.definition.type.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.definition.type.end.kdl
              pop: true
            - include: configuration-key-value
    - match: '((@)(let))[ \t]+([A-Za-z_][A-Za-z0-9_]*)[ \t]*\=[ \t]*'
      captures:
        1: keyword.kdl
        4: entity.name.type.kdl
      set:
        - match: ';'
          pop: true
        - include: string-literal
        - include: identifier-literal
        - include: number-literal
        - include: resource-literal
        - include: percentage-literal
        - include: expression-literal
    - match: '((@)(type))[ \t]+([A-Za-z_][A-Za-z0-9_]*)[ \t]*\:[ \t]*(".{4}")'
      captures:
        1: keyword.kdl
        4: entity.name.type.kdl
        5: entity.other.inherited-class.kdl
      set:
        - match: '\{'
          scope: punctuation.definition.type.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.definition.type.end.kdl
              pop: true
            - include: template-definition
            - include: assertion-rule
            - include: field-definition

# EXPRESSIONS

  expression-block:
    - match: '(\$\()'
      scope: punctuation.expression.begin.kdl
      captures:
        0: keyword.operator.kdl
      set:
        - match: '(\))'
          scope: punctuation.expression.end.kdl
          pop: true
        - include: expression-literal

  expression-literal:
    - match: '(\()'
      captures:
        1: keyword.operator.kdl
      push:
        - include: expression-literal
    - match: '(\))'
      captures:
        1: keyword.operator.kdl
      pop: true
    - match: '([\+\-\*\^\/])'
      captures:
        1: keyword.operator.kdl
    - include: percentage-literal
    - include: number-literal
    - include: string-literal
    - include: identifier-literal
    - include: resource-literal

# CONFIGURATION ################################################################

  configuration-key-value:
    - match: '([A-Za-z0-9_]+)[ \t]*\=[ \t]*'
      captures:
        1: entity.other.attribute-name.kdl
      push:
        - include: string-literal
        - include: identifier-literal
        - include: number-literal
        - include: resource-literal
        - include: percentage-literal
        - match: ';'
          pop: true


# TYPE DEFINITION ##############################################################

  template-definition:
    - match: '(template)'
      scope: meta.interface.kdl
      captures:
        1: keyword.declaration.interface.kdl
      push:
        - match: '\{'
          scope: punctuation.definition.tmpl.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.definition.tmpl.end.kdl
              pop: true
            - match: '(((D|H)(BYT|WRD|LNG|QAD))|RECT|(P|C)STR|C[0-9a-fA-F]{3}|HEXD)[ \t]+([A-Za-z0-9_]+)[ \t]*;'
              captures:
                1: entity.name.type.kdl
                6: entity.other.attribute-name.kdl

  field-definition:
    - match: '(field)[ \t]*\(("[A-Za-z0-9_]+")\)([ \t]+(repeatable)[ \t]*\<([0-9]+)[ \t]*\,[ \t]*([0-9]*)\>)?'
      scope: meta.impl.kdl
      captures:
        1: keyword.declaration.impl.kdl
        2: string.quoted.double.kdl
        4: keyword.other.kdl
        5: constant.numeric.integer.decimal.kdl
        6: constant.numeric.integer.decimal.kdl
      push:
        - match: '\{'
          scope: punctuation.definition.field.begin.kdl
          set:
            - match: '([A-Za-z0-9_]+(\<(\$[A-Za-z0-9_]+)\>)?)([ \t]+(as)[ \t]*(([A-Za-z0-9_]*)(\<([A-Za-z0-9_]+)([ \t]*(\||,)[ \t]*([A-Za-z0-9_]+))*>)?(&?)))?'
              captures:
                1: entity.other.attribute-name.kdl
                3: variable.other.member.kdl
                5: keyword.other.kdl
                7: entity.name.type.kdl
                9: entity.other.inherited-class.kdl
                12: entity.other.inherited-class.kdl
                13: entity.name.type.kdl
              push:
                - include: string-literal
                - include: identifier-literal
                - include: number-literal
                - include: resource-literal
                - include: percentage-literal
                - match: '\['
                  push:
                    - match: '([A-Za-z0-9_]+)[ \t]*=[ \t]*'
                      captures:
                        1: variable.other.constant.kdl
                      push:
                        - include: string-literal
                        - include: number-literal
                        - include: resource-literal
                        - include: percentage-literal
                        - match: '(?=\])|,'
                          pop: true
                    - match: '\]'
                      pop: true
                - match: ';'
                  pop: true
            - match: '\};'
              scope: punctuation.definition.field.end.kdl
              pop: true

  assertion-rule:
    - match: '(assert)[ \t]*'
      scope: meta.impl.kdl
      captures:
        1: keyword.kdl
      push:
        - match: '\('
          set:
            - match: '\);'
              pop: true
            - match: '((\$)[A-Za-z0-9_]+)'
              captures:
                1: variable.language.kdl
            - match: '([<>=-\\+\\*\\/!]+)'
              captures:
                1: keyword.operator.arithmetic.kdl
            - include: number-literal
            - include: resource-literal
            - include: percentage-literal

# RESOURCE DECLARATION #########################################################

  resource-declaration:
    - match: '((@)example[ \t]+)?(declare)[ \t]+([A-Za-z0-9_]+\.)?(([A-Za-z0-9_]+))([ \t]*(\:[A-Za-z0-9_]+)\=([A-Za-z0-9_]+))*'
      scope: meta.impl.kdl
      captures:
        1: keyword.kdl
        3: keyword.declaration.impl.kdl
        4: entity.name.namespace.kdl
        5: entity.name.type.kdl
        8: entity.other.attribute-name.kdl
        9: string.unquoted.kdl
      set:
        - match: '\{'
          scope: punctuation.definition.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.definition.type.end.kdl
              pop: true
            - include: resource-instance

  resource-instance:
    - match: '(new|override)[ \t]*(\([ \t]*((#)([0-9]+|auto))[ \t]*(,[ \t]*("[^"]*")[ \t]*)?\))?'
      captures:
        1: keyword.other.kdl
        3: constant.numeric.integer.decimal.kdl
        6: string.quoted.kdl
      push:
        - match: '\{'
          scope: punctuation.definition.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.definition.type.end.kdl
              pop: true
            - include: resource-field
    - match: '(duplicate)[ \t]*(\([ \t]*((#)([0-9]+))[ \t]+(as)[ \t]+((#)([0-9]+))[ \t]*(,[ \t]*("[^"]*")[ \t]*)?\))'
      captures:
        1: keyword.other.kdl
        3: constant.numeric.integer.decimal.kdl
        6: keyword.other.kdl
        7: constant.numeric.integer.decimal.kdl
        11: string.quoted.kdl
      push:
        - match: '\{'
          scope: punctuation.definition.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.definition.type.end.kdl
              pop: true
            - include: resource-field

  resource-field:
    - match: '([A-Za-z0-9_]+)[ \t]*=[ \t]*'
      captures:
        1: variable.parameter.kdl
      push:
        - match: ';'
          pop: true
        - include: import-literal
        - include: resource-literal
        - include: identifier-literal
        - include: number-literal
        - include: string-literal
        - include: percentage-literal

# COMPONENT ####################################################################

  component-declaration:
    - match: '(component)[ \t]+("[^"]*")'
      captures:
          1: keyword.declaration.interface.kdl
          2: string.quoted.double.kdl
      push:
        - match: '\{'
          scope: punctuation.component.begin.kdl
          set:
            - match: '\};'
              scope: punctuation.component.end.kdl
              pop: true
            - match: '(is_scene);'
              captures:
                1: keyword.parameter.kdl
            - match: '(path_prefix|namespace|base_id|as_type)[ \t]*\=[ \t]*'
              captures:
                1: variable.parameter.kdl
              push:
                - match: ';'
                  pop: true
                - include: string-literal
                - include: number-literal
                - include: percentage-literal
                - include: resource-literal
                - include: percentage-literal
                - include: expression-literal
            - match: '(files)'
              captures:
                1: keyword.control.import.kdl
              push:
                - match: '\{'
                  scope: punctuation.files.begin.kdl
                  set:
                    - match: '\};'
                      scope: punctuation.files.end.kdl
                      pop: true
                    - match: '("[^"]*")[ \t]*\(("[^"]*")\)[ \t]*;'
                      captures:
                        1: string.quoted.double.kdl
                        2: string.quoted.double.kdl

# LITERALS #####################################################################

  import-literal:
    - match: '(import)[ \t]+("[^"]*")'
      captures:
        1: keyword.import.kdl
        2: string.quoted.double.kdl

  identifier-literal:
    - match: '[A-Za-z0-9_-]+'
      scope: constant.other.kdl

  variable-literal:
    - match: '\$[A-Za-z0-9_-]+'
      scope: variable.kdl

  string-literal:
    - match: '"'
      scope: punctuation.definition.string.begin.kdl
      push:
        - meta_scope: string.quoted.double.kdl
        - match: '"|(\n)'
          scope: punctuation.definition.string.end.kdl
          pop: true

  number-literal:
    - match: '((0x|0X)[0-9a-fA-F]+)|((-)?[0-9]+)'
      scope: constant.numeric.integer.decimal.kdl

  percentage-literal:
    - match: '(-)?[0-9]+(\%)'
      scope: constant.numeric.integer.percentage.kdl

  resource-literal:
    - match: '([A-Za-z0-9_]+\.)?(\#)(-)?[0-9]+'
      scope: constant.numeric.integer.decimal.kdl