@type Fruit : "fr√ºt" {
	template {
		PSTR Name;
		HLNG ColorValue1;
		HLNG ColorValue2;
		HLNG ColorValue3;
		HLNG ColorValue4;
		PSTR ColorName1;
		PSTR ColorName2;
		PSTR ColorName3;
		PSTR ColorName4;
		DWRD Country;
		DBYT Climate;
	};
	
	@setter field("Name") {
		Name;
	};
	
	field("Color") repeatable<1,4> {
		ColorValue<$FieldNumber> as Color [
			Red = 0xFF0000,
			Green = 0x00FF00,
			Yellow = 0xFFFF00,
			Orange = 0xFF8800,
			Purple = 0xFF0088,
		];
		ColorName<$FieldNumber>;
	};
	
	field("Country") {
		Country as Country& = #-1;
		Climate = Temperate [
			Cold = 0,
			Temperate = 1,
			Tropical = 2
		];
	};
};

@type LuaScript : "LuaS" {
	template {
		CSTR Script;
	};
	
	field("Script") {
		Script;	
	};
};

@lua_export component "Base Components" {
	path_prefix = "";
	namespace = "models";
	base_id = #1000;
	as_type = LuaScript;
	
	types {
		Fruit;
	};
};